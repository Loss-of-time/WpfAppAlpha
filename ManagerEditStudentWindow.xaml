<Window x:Class="WpfAppAlpha.ManagerEditStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Student" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="10">
            <StackPanel Margin="5">
                <TextBlock Text="Name" Foreground="Gray"/>
                <TextBox x:Name="TextBoxName"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Sex" Foreground="Gray"/>
                <TextBox x:Name="TextBoxSex"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Home" Foreground="Gray"/>
                <TextBox x:Name="TextBoxHome"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Year" Foreground="Gray"/>
                <TextBox x:Name="TextBoxYear"/>
            </StackPanel>
        </StackPanel>
        <Button Grid.Row="1" Content="Save" Margin="10" HorizontalAlignment="Right" Click="SaveButton_Click"/>
    </Grid>
</Window>